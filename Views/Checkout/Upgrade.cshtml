@model WebPhongKham.Models.ViewModel.UpgradeAccountViewModel

@{
    ViewData["Title"] = "Nâng cấp tài khoản";
}

<div class="container mt-5">
    <h2 class="text-center">Nâng cấp tài khoản</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Gói @Model.PackageName</h4>
                </div>
                <div class="card-body">
                    <p><strong>Giá:</strong> @Model.Price VND</p>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="UpgradeAccount" asp-controller="Checkout" method="post">
                        <button type="submit" class="btn btn-primary">Thanh toán qua VNPay</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
